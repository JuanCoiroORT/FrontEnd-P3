@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 bg-dark text-light p-4 rounded shadow-lg" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Iniciar sesión</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger mt-2">
            @ViewBag.Message
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control bg-dark text-light border-secondary" required  />
        </div>

        <div class="form-group mb-3">
            <label>Contraseña</label>
            <input type="password" name="password" class="form-control bg-dark text-light border-secondary" required  />
        </div>

        <button type="submit" class="btn btn-outline-light w-100">Iniciar sesión</button>
    </form>
</div>

