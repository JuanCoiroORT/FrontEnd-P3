@using FrontEnd.Models;
@model CambioPasswordDTO;

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Mensaje</div>
}

<h2>Cambiar Contraseña</h2>

<form asp-action="CambiarPassword" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="PasswordActual">Contraseña actual</label>
        <input asp-for="PasswordActual" type="password" class="form-control" />
        <span asp-validation-for="PasswordActual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordNueva">Nueva contraseña</label>
        <input asp-for="PasswordNueva" type="password" class="form-control" />
        <span asp-validation-for="PasswordNueva" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cambiar contraseña</button>
</form>