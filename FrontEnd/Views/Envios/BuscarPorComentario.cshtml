@model List<EnvioDTO>

<div class="container mt-5 bg-dark text-light p-4 rounded shadow-lg">
    <h2 class="mb-4 text-center">Buscar Envíos por Comentario</h2>

    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-danger">@ViewBag.Msg</div>
    }

    <form asp-action="BuscarPorComentario" method="post">
        <div class="form-group mb-3">
            <label class="form-label">Palabra clave:</label>
            <input name="comentario" class="form-control bg-secondary text-light" />
        </div>
        <button class="btn btn-outline-light" type="submit">Buscar</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <h3 class="mt-4">Resultados:</h3>
        <table class="table table-dark table-striped mt-3">
            <thead>
                <tr>
                    <th>Tracking</th>
                    <th>Estado</th>
                    <th>Fecha Creación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var envio in Model)
                {
                    <tr>
                        <td>@envio.NumTracking</td>
                        <td>@envio.Estado</td>
                        <td>@envio.FechaCreacion.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
