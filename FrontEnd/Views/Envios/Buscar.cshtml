@{
    ViewData["Title"] = "Buscar Envío";
}

<h2>Buscar Envío por numero de tracking</h2>

@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Msg
    </div>
}

<form asp-controller="Envios" asp-action="BuscarEnvio" method="get">
    <input type="text" name="numTracking" placeholder="Número de tracking" />
    <button type="submit">Buscar</button>
</form>
